{% extends 'base.html.twig' %}

{% block body %}

    <div class="form-group">
        <label class="col-form-label" for="get_article_by_ref_reference">Référence de l'article</label>
        <input type="text" class="form-control" placeholder="Entrez la référence ici" id="get_article_by_ref_reference">
        <button type="submit" class="btn btn-success" id="get_article_by_ref_submit">Chercher l'article</button>
        <p><span id="get_article_by_ref_result"></span></p>
    </div>
    <div class="form-group" id="edit" style="display: none">
        <label class="col-form-label" for="edit_article_reference"></label>
        <input type="text" class="form-control" id="edit_article_reference" value="">
        <label class="col-form-label" for="edit_article_name"></label>
        <input type="text" class="form-control" id="edit_article_name" value="">
        <label class="col-form-label" for="edit_article_price"></label>
        <input type="text" class="form-control" id="edit_article_price" value="">
        <button type="submit" class="btn btn-success" id="edit_article_submit">Editer l'article</button>
        <button type="submit" class="btn btn-success" id="add_stock_submit">Ajouter au stock</button>
        <p><span id="edit_article_result"></span></p>
    </div>
    <div class="form-group" id="stock" style="display: none">
        <label class="col-form-label" for="add_article_stock_amount"></label>
        <input type="text" class="form-control" placeholder="Entrez la quantité ici" id="add_article_stock_amount" value="">
        <label class="col-form-label" for="add_article_stock_warehouse"></label>
        <input type="text" class="form-control" placeholder="Entrez l'entrepôt ici" id="add_article_stock_warehouse" value="">
        <button type="submit" class="btn btn-success" id="add_article_stock_submit">Ajouter</button>
        <p><span id="add_article_stock_result"></span></p>
    </div>
    <div id="warehouse_list" style="display: none">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Nom</th>
            </tr>
            </thead>
            <tbody id="warehouse_tbody">

            </tbody>
        </table>
    </div>

{%  endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="{{ asset('assets/js/lib.js') }}"></script>
{% endblock %}