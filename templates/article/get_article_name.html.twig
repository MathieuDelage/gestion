{% extends 'base.html.twig' %}

{% block body %}

    <div class="form-group">
        <label class="col-form-label" for="get_article_by_name_name">Nom de l'article</label>
        <input type="text" class="form-control" placeholder="Entrez le nom de l'article ici" id="get_article_by_name_name">
        <button type="submit" class="btn btn-success" id="get_article_by_name_submit">Chercher l'article</button>
        <p><span id="get_article_by_name_result"></span></p>
    </div>
    <div class="form-group" id="edit" style="display: none">
        <label class="col-form-label" for="edit_article_reference">Référence</label>
        <input type="text" class="form-control" id="edit_article_reference" value="">
        <label class="col-form-label" for="edit_article_name">Nom</label>
        <input type="text" class="form-control" id="edit_article_name" value="">
        <label class="col-form-label" for="edit_article_price">Prix</label>
        <input type="text" class="form-control" id="edit_article_price" value="">
        <button type="submit" class="btn btn-success" id="edit_article_submit">Editer l'article</button>
        <p><span id="edit_article_result"></span></p>
    </div>

{%  endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="{{ asset('assets/js/lib.js') }}"></script>
{% endblock %}