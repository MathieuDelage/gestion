{% extends 'base.html.twig' %}

{% block body %}

    <div class="form-group">
        <label class="col-form-label" for="get_article_price_min">Prix minimum</label>
        <input type="text" class="form-control" placeholder="Entrez le prix minimum de l'article ici" id="get_article_price_min">
        <label class="col-form-label" for="get_article_price_max">Prix maximum</label>
        <input type="text" class="form-control" placeholder="Entrez le prix maximum de l'article ici" id="get_article_price_max">
        <button type="submit" class="btn btn-success" id="get_article_price_submit">Chercher l'article</button>
        <p><span id="get_article_price_result"></span></p>
    </div>
    <div id="interval_result" style="display: none">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Référence</th>
                <th scope="col">Nom de l'article</th>
                <th scope="col">Prix</th>
            </tr>
            </thead>
            <tbody id="interval_tbody">

            </tbody>
        </table>
    </div>

{%  endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="{{ asset('assets/js/lib.js') }}"></script>
{% endblock %}