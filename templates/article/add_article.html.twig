{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <h2>Ajouter un article</h2>
    </div>
    <br>
    <div class="form-group">
        <label class="col-form-label" for="add_article_reference">Référence de l'article</label>
        <input type="text" class="form-control" placeholder="Entrez la référence ici" id="add_article_reference">
        <label class="col-form-label" for="add_article_name">Nom de l'article</label>
        <input type="text" class="form-control" placeholder="Entrez le nom ici" id="add_article_name">
        <label class="col-form-label" for="add_article_price">Prix de l'article</label>
        <input type="text" class="form-control" placeholder="Entrez le prix ici" id="add_article_price">
        <button type="submit" class="btn btn-success" id="add_article_submit">Ajouter l'article</button>
        <p><span id="add_article_result"></span></p>
    </div>

{%  endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="{{ asset('assets/js/lib.js') }}"></script>
{% endblock %}